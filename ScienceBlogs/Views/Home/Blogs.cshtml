@model List<ScienceBlogs.Models.Blog>

<div class="container">
	<section class="recent-posts">
		<div class="card-columns listrecent">
			<!-- begin post -->
			@foreach (var item in Model)
			{
				<div class="card">
					<a>
						<img class="img-fluid" src="~/Images/Blogs/@item.Image" alt="">
					</a>
					<div class="card-block">
						<h2 class="card-title"><a asp-controller="Home" asp-action="Blog" asp-route-id="@item.ID">@item.Title</a></h2>
						<p>@item.Description</p>
						<h4 class="card-text">Annotated by @item.Author</h4>
						<h4 class="card-text">Annotated on @item.Date</h4>

					</div>
				</div>
			}
			<!-- end post -->
		</div>
	</section>
	<!-- End List Posts
	================================================== -->
</div>
<!-- /.container -->